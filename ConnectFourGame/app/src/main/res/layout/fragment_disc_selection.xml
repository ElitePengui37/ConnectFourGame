<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:background="@drawable/section_card2"
    android:orientation="horizontal"
    android:gravity="top"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/select_disc_color_red"
        android:src="@drawable/disc"
        app:tint="@color/red"
        android:layout_marginHorizontal="4dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/select_disc_color_yellow"
        android:src="@drawable/disc"
        android:layout_marginHorizontal="4dp"
        app:tint="@color/yellow"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/select_disc_color_green"
        android:src="@drawable/disc"
        android:layout_marginHorizontal="4dp"
        app:tint="@color/green"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/select_disc_color_purple"
        android:src="@drawable/disc"
        android:layout_marginHorizontal="4dp"
        app:tint="@color/purple"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/select_disc_color_brown"
        android:src="@drawable/disc"
        android:layout_marginHorizontal="4dp"
        app:tint="@color/brown"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/select_disc_color_black"
        android:src="@drawable/disc"
        android:layout_marginHorizontal="4dp"
        app:tint="@color/black"
        android:layout_width="48dp"
        android:layout_height="48dp" />
</LinearLayout>